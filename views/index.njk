<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Travel Information Form</title>
  </head>
  <body>
    <h1>Input Travel Information</h1>

    <form id="travel-form">
      <div>
        <label for="city">city Tujuan:</label>
        <input type="text" id="city" name="city" required />
      </div>

      <div>
        <label for="jumlah_orang">Jumlah Orang:</label>
        <input type="number" id="jumlah_orang" name="jumlah_orang" required />
      </div>

      <div>
        <label for="mata_uang">Mata Uang:</label>
        <input type="text" id="mata_uang" name="mata_uang" required />
      </div>

      <div>
        <label for="budget">Budget:</label>
        <input type="number" id="budget" name="budget" required />
      </div>

      <div>
        <label for="musim">Musim Perjalanan:</label>
        <select id="musim" name="musim" required>
          <option value="summer">Musim Panas</option>
          <option value="winter">Musim Dingin</option>
          <option value="spring">Musim Semi</option>
          <option value="fall">Musim Gugur</option>
        </select>
      </div>

      <div>
        <label for="lama_perjalanan">Lama Perjalanan (hari):</label>
        <input
          type="number"
          id="lama_perjalanan"
          name="lama_perjalanan"
          required
        />
      </div>

      <div>
        <label for="tipe_perjalanan">Tipe Perjalanan:</label>
        <select id="tipe_perjalanan" name="tipe_perjalanan" required>
          <option value="liburan">Liburan</option>
          <option value="bisnis">Bisnis</option>
          <option value="keluarga">Keluarga</option>
        </select>
      </div>

      <div>
        <label for="transportasi">Transportasi:</label>
        <select id="transportasi" name="transportasi" required>
          <option value="pesawat">Pesawat</option>
          <option value="kereta">Kereta</option>
          <option value="mobil">Mobil</option>
          <option value="bus">Bus</option>
        </select>
      </div>

      <div>
        <button type="submit">Submit</button>
      </div>
    </form>

    <div id="response-output"></div>

    <script>
      document
        .getElementById("travel-form")
        .addEventListener("submit", async function (event) {
          event.preventDefault(); // Prevent the form from submitting the traditional way

          // Collect form data
          const formData = {
            city: document.getElementById("city").value,
            jumlah_orang: document.getElementById("jumlah_orang").value,
            mata_uang: document.getElementById("mata_uang").value,
            budget: document.getElementById("budget").value,
            musim: document.getElementById("musim").value,
            lama_perjalanan: document.getElementById("lama_perjalanan").value,
            tipe_perjalanan: document.getElementById("tipe_perjalanan").value,
            transportasi: document.getElementById("transportasi").value,
          };

          // Send the form data using fetch
          try {
            const response = await fetch("/", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(formData),
            });

            // Parse the JSON response from the server
            if (!response.ok) {
              throw new Error("Network response was not ok.");
            }

            const result = await response.text(); // Assuming you're receiving HTML or text
            document.getElementById("response-output").innerHTML = result;
          } catch (error) {
            console.error(
              "There was a problem with the fetch operation:",
              error
            );
            document.getElementById("response-output").innerHTML =
              "<p style='color: red;'>Error submitting the form. Please try again.</p>";
          }
        });
    </script>
  </body>
</html>
